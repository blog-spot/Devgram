<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <!-- bootstrap conn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>View blogs || Devgram</title>
    <style>
      .blogs-data{
        text-align: center;
        align-items: center;
        margin-left:40%;

      }
      div{
        padding-bottom: 10%;
      }

      h1{
        text-align: center;
      }

      .main-card{
        padding-bottom:10%;
      }
      
    </style>
  </head>
  <body>
    <h1>Blogs</h1>
    <!-- card strucutre -->
    <div class='main-card'>
    <% items.forEach(function(doc) { %>

    <div class="card blogs-data" style="width: 18rem;">
      <!-- card spec -->
      <div class="card-body body-cardd">

        <!-- card title -->
          <h5 class='card-title'>
            A blog by
            <%= doc.Username%>..
          </h5>

        <p class="card-text">
          Content:
          <%= doc.userBlog%>
        </p>
      </div>
    </div>
    <% }); %>
  </div>



    <!-- <ul>
      <% items.forEach(function(doc) { %>
        <li>Userblog: <%= doc.userBlog %></li>
        <li>Username: <%= doc.Username%></li>
      <% }); %>
    </ul> -->

    </body>
    <!-- bootstrap animations -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</html>
